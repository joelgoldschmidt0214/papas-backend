// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
  "name": "FastAPI Dev Container",
  "build": {
    // Sets the run context to one level up instead of the .devcontainer folder.
    "context": "..",
    // Update the 'dockerFile' property if you aren't using the standard 'Dockerfile' filename.
    "dockerfile": "../Dockerfile"
  },

  // 開発を便利にするための設定
  "customizations": {
    "vscode": {
      // コンテナ内で自動的にインストールしたい拡張機能
      "extensions": [
        "ms-python.python", // 公式Python拡張機能
        "charliermarsh.ruff" // 高速なリンター兼フォーマッター
      ],
      // コンテナ内でのみ有効にしたい設定
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        // Ruffをフォーマッターとして設定し、保存時に自動フォーマット
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true
        }
      }
    }
  },

  // コンテナのポート8000をホストPCに転送
  "forwardPorts": [8000],

  // コンテナ作成後に一度だけ実行されるコマンド
  // ここで依存関係をインストールする
  "postCreateCommand": "pip install -r requirements.txt",
  
  // VS Codeがコンテナに接続するたびに、開発サーバーを自動で起動する
  "postAttachCommand": "uvicorn main:app --host 0.0.0.0 --reload"

}
