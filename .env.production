# TOMOS Backend API - Production Environment Configuration
# This file contains production-specific settings

# --- Environment Configuration ---
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=/app/logs/tomos.log

# --- Application Configuration ---
APP_NAME="TOMOS Backend API"
APP_VERSION="1.0.0"
HOST=0.0.0.0
PORT=8000
WORKERS=2

# --- Database Pool Configuration (Optimized for Production) ---
DB_POOL_SIZE=15
DB_MAX_OVERFLOW=25
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true
DB_ECHO=false

# --- Cache Configuration ---
CACHE_SIZE_LIMIT=1000000
CACHE_INITIALIZATION_TIMEOUT=30

# --- Authentication Configuration ---
SESSION_TIMEOUT=3600
# NOTE: Set SESSION_SECRET_KEY via environment variable or Azure Key Vault
# python -c "import secrets; print(secrets.token_hex(32)) などで自動生成してセットする"

# --- CORS Configuration ---
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001", "https://aca-gen10-01.ambitiousground-989c3319.australiaeast.azurecontainerapps.io"]
CORS_ALLOW_CREDENTIALS=true

# --- Performance Configuration ---
REQUEST_TIMEOUT=30
RESPONSE_COMPRESSION_THRESHOLD=500
MAX_REQUEST_SIZE=16777216

# --- Monitoring Configuration ---
ENABLE_METRICS=true
METRICS_RETENTION_HOURS=24
HEALTH_CHECK_TIMEOUT=5

# --- Logging Configuration ---
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5