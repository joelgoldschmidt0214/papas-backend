# TOMOS Backend API - Environment Configuration Template
# Copy this file to .env and update with your actual values

# --- Environment Configuration ---
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
LOG_FILE=

# --- Application Configuration ---
APP_NAME="TOMOS Backend API"
APP_VERSION="1.0.0"
HOST=0.0.0.0
PORT=8000
WORKERS=1

# --- Database Configuration ---
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=your_database_host.mysql.database.azure.com
DB_PORT=3306
DB_NAME=your_database_name
SSL_CA_PATH=/path/to/DigiCertGlobalRootG2.crt.pem

# --- Database Pool Configuration ---
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true
DB_ECHO=false

# --- Cache Configuration ---
CACHE_SIZE_LIMIT=1000000
CACHE_INITIALIZATION_TIMEOUT=30

# --- Authentication Configuration ---
# python -c "import secrets; print(secrets.token_hex(32)) などで自動生成してセットする"
SESSION_TIMEOUT=3600
SESSION_SECRET_KEY=dev-secret-key-change-in-production

# --- CORS Configuration ---
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001", "https://aca-gen10-01.ambitiousground-989c3319.australiaeast.azurecontainerapps.io"]
CORS_ALLOW_CREDENTIALS=true

# --- Performance Configuration ---
REQUEST_TIMEOUT=30
RESPONSE_COMPRESSION_THRESHOLD=500
MAX_REQUEST_SIZE=16777216

# --- Monitoring Configuration ---
ENABLE_METRICS=true
METRICS_RETENTION_HOURS=24
HEALTH_CHECK_TIMEOUT=5